{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@crosscutting/*": ["./src/3-crosscutting/*"],
            "@adapters/*": ["./src/0-adapters/*"],
            "@application/*": ["./src/1-application/*"],
            "@domain/*": ["./src/2-domain/*"]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}